defencoding utf8
defscrollback 60000
escape ^z^z
shell zsh
#hardstatus alwayslastline "%{= bc}%H[%n]: %{= bg}%Y/%m/%d (%D) %c [%Lw]"
hardstatus alwayslastline "%{= }%H[%n]: %{= bg}%Y/%m/%d (%D) %c [%Lw]"
bind ^W windowlist -b
shelltitle "$HOSTNAME"
#termcapinfo xterm-color 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

#aterm bindings
bindkey "^[[c" next
bindkey "^[[d" prev
bindkey "^[Oc" next
bindkey "^[Od" prev
#putty bindings
bindkey "^[OC" next
bindkey "^[OD" prev
#some other term, don't remember which
bindkey "^[[5C" next
bindkey "^[[5D" prev
termcapinfo xterm-color "ks=\E[?1l\E:ku=\E[A:kd=\E[B:kl=\E[D:kr=\E[C:kh=\E[5~:kH=\E[F"
